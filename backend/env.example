# Backend Environment Variables
# Copy this file to .env for local development
# On Render, these are set automatically via the dashboard (except GOOGLE_*)

# Server Configuration
PORT_BACKEND=8080
HOST_BACKEND=localhost

# Database Configuration (for local development)
# On Render, these are auto-configured from the database service
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5433/bregmotors
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_password_here

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=true

# Frontend URL (for CORS and OAuth2 redirects)
# On Render, this is auto-configured from the frontend service
FRONTEND_URL=http://localhost:5174

# Google OAuth2 Credentials
# You MUST set these in Render dashboard manually
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Application Name
SPRING_APPLICATION_NAME=backend

